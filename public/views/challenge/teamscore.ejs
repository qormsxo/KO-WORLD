    <body>
        <div class="container">
            <img src="../assets/images/icon_05.png" alt="login icon" />
            <h2>Team Score</h2>
            <div class="row" style="justify-content: flex-end">
                <div class="col-sm-3">
                    <label>Select Round</label>
                    <select id="select_round_option" class="form-select" style="display: inline; width: 57%" aria-label="Default select example">
                        <option value="1" selected>1 Round</option>
                        <option value="2">2 Round</option>
                        <option value="3">3 Round</option>
                        <option value="4">4 Round</option>
                        <option value="5">5 Round</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <label>Grading Status</label>
                    <select id="select_option" class="form-select" style="display: inline; width: 57%" aria-label="Default select example">
                        <option value="all" selected>all</option>
                        <option value="graded">graded</option>
                        <option value="required">grading required</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <div class="input-group">
                        <input type="text" id="search_keyword" name="search_keyword" class="form-control" placeholder="User Name" />
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button" onclick="teamscore.search();">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form">
            <ul>
                <li><b>· Highschool Student</b></li>
            </ul>
            <table class="table" id="highTable">
                <caption class="hidden">
                    Highschool Student
                </caption>
                <colgroup>
                    <col width="" />
