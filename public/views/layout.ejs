            <%} else {%>
            <button class="phill blue" onclick="location.href = '/account/register'">Register</button>
            <button class="phill blue" onclick="location.href = '/account/login'">Login</button>
            <%}%>
        </div>
        <!-- // 등록, 로그인 -->
