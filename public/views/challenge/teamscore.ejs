                <thead>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th>Nationality</th>
                    <th>Email</th>
                    <th>Answer</th>
                    <th>File</th>
                    <th>Score</th>
                    <th>Ranking</th>
                    <th>Pass OR Fail</th>
                    <th>IDX</th>
                    <th>ROUND</th>
                </thead>
                <tbody id="highSchool"></tbody>
            </table>
        </div>

        <div class="form">
            <ul>
                <li><b>· College Student</b></li>
            </ul>
            <table class="table" id="collegeTable">
                <caption class="hidden">
